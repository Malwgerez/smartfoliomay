    <script>
        // A√±adir interactividad suave
        document.querySelectorAll('.items-list li').forEach(item => {
            item.addEventListener('click', function() {
                const badge = this.querySelector('.status-badge');
                const originalText = badge.textContent;
                badge.textContent = '‚úì Visto';
                badge.style.background = 'linear-gradient(135deg, #27ae60, #2ecc71)';
                
                setTimeout(() => {
                    badge.textContent = originalText;
                    badge.style.background = 'linear-gradient(135deg, #667eea, #764ba2)';
                }, 2000);
            });
        });

        // Efecto de parallax suave en elementos flotantes
        window.addEventListener('scroll', () => {
            const scrollY = window.scrollY;
            const elements = document.querySelectorAll('.floating-element');
            
            elements.forEach((element, index) => {
                const speed = (index + 1) * 0.5;
                element.style.transform = `translateY(${scrollY * speed}px) rotate(${scrollY * 0.1}deg)`;
            });
        });

        // Animaci√≥n de entrada para las secciones
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.portfolio-section').forEach(section => {
            observer.observe(section);
        });
    </script>
